  background-color: #f2f2f2;
}
.search-box {
  width: 100%;
  position: relative;
  overflow: hidden;
}
.search-bar {
  box-sizing: border-box;
  width: 90%;
  margin: 20rpx auto 0;
  height: 60rpx;
  line-height: 60rpx;
  padding-left: 46rpx;
  color: #666;
  font-size: 24rpx;
  border: 1px solid #efefef;
  border-radius: 20rpx;
}
.p-class {
  color: #666;
}
.search-icon {
  position: absolute;
  width: 24rpx;
  height: 24rpx;
  left: 9%;
  margin-left: -12rpx;
  top: 40rpx;
}
.search-container {
  width: 100%;
  height: 100px;
  margin-top: 88rpx;
}