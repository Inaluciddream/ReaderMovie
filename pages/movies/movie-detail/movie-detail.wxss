@import "../starTool-template/starTool-template.wxss";
.container {
  display: flex;
  flex-direction: column;
}

.cover-img {
  width: 100%;
  height: 320rpx;
  filter: blur(20px);
}

.head-img-hover {
  width: 100%;
  height: 320rpx;
  position: absolute;
  top: 0;
  left: 0;
  display: flex;
  flex-direction: column;
  padding: 30rpx 30rpx 60rpx;
}

.head-movie-name {
  font-size: 19px;
  color: #fff;
  font-weight: bold;
  margin-top: 50rpx;
  margin-left: 40rpx;
  letter-spacing: 2px;
}

.movie-country {
  font-size: 28rpx;
  color: #fff;
  margin-left: 40rpx;
  margin-top: 30rpx;
}
.praise {
  margin-left: 40rpx;
  margin-top: 30rpx;
}
.like {
  display: flex;
  flex-direction: row;
  margin-top: 30rpx;
  margin-left: 40rpx;
}

.num-count {
  color: #f21146;
  font-size: 24rpx;
  margin-right: 10rpx;
}

.plain-font {
  color: #333;
  font-size: 22rpx;
  margin-right: 30rpx;
}

.movie-img {
  height: 238rpx;
  width: 175rpx;
  position: absolute;
  top: 160rpx;
  right: 30rpx;
}

.movie-info {
  background-color: #fff;
  padding-left: 40rpx;
  padding-top: 40rpx;
  color: #777777;
  font-size: 26rpx;
}

.movie-name{
  color: #111;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 40rpx;
  letter-spacing: 5px;
}

.flex-row {
  display: flex;
  flex-direction: row;
}

.type-name {
  color: #a3a3a3;
  margin-right: 30rpx;
  white-space: nowrap;
  margin-bottom: 10rpx;
}

.hr {
  margin-top: 45rpx;
  height: 1px;
  width: 100%;
  background-color: #d9d9d9;
}

.director-name,
.actor-name,
.movie-type {
  color: #666;
  margin-left: 60rpx;
  font-size: 26rpx;
}

.easy-plot {
  margin-left: 40rpx;
  display: flex;
  flex-direction: column;
  margin-top: 50rpx;
}

.plot {
  margin-top: 20rpx;
  margin-right: 40rpx;
  line-height: 40rpx;
  letter-spacing: 1px;
  font-size: 24rpx;
}

.related-actor {
  margin-left: 40rpx;
  display: flex;
  flex-direction: column;
  margin-top: 50rpx;
}

.cast-container{
  display:inline-flex;
  flex-direction: column;
  margin-bottom: 50rpx;
  margin-right: 40rpx;
  width: 170rpx;
  text-align:center;
  white-space: normal;
}

.cast-imgs{
  margin-top: 40rpx;
  white-space: nowrap;
}

.cast-img{
  width: 170rpx;
  height: 210rpx;
}
.cast-name{
  margin: 10rpx auto 0;
  font-size: 26rpx;
}


